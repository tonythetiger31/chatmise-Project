<body onload="getAllChatsUsernameAndTexts();">
	<!--gif onload-->
	<div id="loadimg"></div>
	<div id="postloadwraper">
		<!--Internet warining-->
		<div id="internetWaring">Connection error, please check your internet</div>
		<!--Settings menu=========================-->
		<div id='all_settings' class="all_settings">
			<div class="Exit" onclick="openCloseSettingsMenu('close')"></div>
			<div class="title">Info</div>
			<div class="peopleCount">active users<span id="Count">: 1</span></div>
			<div class="subTitle">Loged in as
				<%= username %>
			</div>
			<div class="tips"><a href="https://tipsandbugreport.netlify.app/">Tips/Report Bugs</a></div>
			<div class="title">Settings</div>
			<div class="subTitle">Theme</div>
			<div class="div_Themesetting">
				<select onchange="selectAndPostValueOfTheme()" class="themesetting" id="themesetting">
					<option value="1">Dark Theme</option>
					<option value="2">Gray Theme</option>
					<option value="3">Light Theme</option>
				</select>
			</div>
			<div class="logout">
				<button onclick="logoutUser()">Logout</button>
			</div>
		</div>
        <!--Settings menu=========================-->
        <!--Chats menu-->
        <div id='chatMenu' tabindex="1" onblur="openCloseChatMenu('close')">
			<div class="topOfChatMenu">
				<a type="button" class="exitChatButton" onclick="openCloseChatMenu('close')"></a>
				<div class="chatTitle">Chats</div>
			</div>
			<div id='topchat'></div>
        </div>
        <!--Chats menu-->
		<div id='uiWrapper' class="uiWrapper">
			<div class="topBar">
				<!--topBar-->
				<a type='button' class="chatButton" onclick="openCloseChatMenu('open')"></a>
				<div id="chatTitle">choose a chat</div>
				<a type='button' class="hamburger" onclick="openCloseSettingsMenu('open')"></a>
			</div>
			<div id="tip1">Press the arrow on the top left of your screen to access your chats</div>
			<div class="messages"><div id="message"></div>
			<!--messages go bellow #message-->
		</div>
			<div class="scrollBottomButton">new messages</div>
			<div id="messageInputFeild">
				<textarea placeholder="type a message here" id="input" maxlength="170" onkeydown="sendMessageWhenEnterKeyPressed(event)"></textarea>
				<button onclick="displayAndSendOutGoingMessage()">Enter</button>
			</div>
		</div>
	</div>
	<!--====================================================================-->
	<script src="file.java.js"></script>
	<!--====================================================================-->
</body>
</html>